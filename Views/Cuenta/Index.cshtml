@model clase00_asp_net.Models.CuentaModelView
<html>
<head>
    @*referencia a bootstrap*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

    @*@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    Para evitar agregar la referencia de arriba, mejor es crearse una vista especificamente para hacer la referecia y pueda usarse en todas las vistas
    *@
</head>
<body>
    <div class="container ">
        <div class="row justify-content-center">
            <div class="col-4">
                <h3 class="text-center">Registro de desarrollador</h3>
                <form asp-controller="Cuenta" asp-action="Registro" method="post">
                    <table>
                        <tr>
                            <td class="form-label">Usuario</td>
                            <td>
                                <input asp-for="cuenta.usuario" class="form-control" />
                            </td>
                        </tr>
                        <tr>
                            <td class="form-label">Password</td>
                            <td>
                                <input type="password" asp-for="cuenta.password" class="form-control" />
                            </td>
                        </tr>
                        <tr>
                            <td class="form-label">Descripcion</td>
                            <td>
                                <textarea cols="30" rows="5" asp-for="cuenta.descripcion" class="form-control"></textarea>
                            </td>
                        </tr>
                        <tr>
                            <td class="form-label">Disponible</td>
                            <td>
                                <input type="checkbox" asp-for="cuenta.disponible" class="form-check-input" />
                            </td>
                        </tr>
                        <tr>
                            <td class="form-label">Genero</td>
                            <td>
                                <input type="radio" value="f" asp-for="cuenta.genero" /> Femenino
                                <br />
                                <input type="radio" value="m" asp-for="cuenta.genero" /> Masculino
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>

